<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

  <ImageView
      android:id="@+id/img_pokemon"
      android:src="@drawable/pikachu"
      android:layout_width="80dp"
      android:layout_height="80dp"/>

  <TextView
      android:id="@+id/text_pokemon_name"
      android:layout_marginLeft="@dimen/activity_horizontal_margin"
      android:layout_marginRight="@dimen/activity_horizontal_margin"
      android:layout_centerVertical="true"
      android:layout_toRightOf="@+id/img_pokemon"
      android:layout_alignRight="@+id/cb_pokemon_filter"
      android:layout_toEndOf="@id/img_pokemon"
      android:textSize="20sp"
      android:text="@string/pikachu"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>

  <CheckBox
      android:id="@+id/cb_pokemon_filter"
      android:text=""
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

</RelativeLayout>